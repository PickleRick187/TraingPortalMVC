
@model TrainingPortal.Models.CourseView

@{
    Layout = "~/Views/Shared/_CourseLayout.cshtml";
}


<style>
    body {
        padding-top: 50px;
    }

    .container {
        padding: 50px;
    }
</style>

<div class="container">
    <div class="container" style="background: #0D1218">
        <form>
            <h4 style="color: white" align="center">Course Details</h4>
            <hr color="#ff3547">
            <div class="row">
                <div class="col-sm">

                    <img src="~/Content/Images/Courses/3 csharp-e7b8fcd4ce.png" />
                </div>
                <div class="col-sm">
                    <h5 style="color: white" align="center">

                        @Html.DisplayNameFor(model => model.CourseName)



                        @Html.DisplayFor(model => model.CourseName)

                    </h5>
                    <h3 style="color: #ff3547" align="center">

                        @Html.DisplayNameFor(model => model.CoursePrice)



                        @Html.DisplayFor(model => model.CoursePrice)

                    </h3>
                    @Html.DisplayNameFor(m => m.CourseDescription)
                    <p style=" text-align: center; color: white; word-wrap: normal">@Html.DisplayFor(model => model.CourseDescription)</p>

                </div>



            </div>


            @Html.ActionLink("Pay", "Payment", new {id = Model.CourseID})
        </form>

    </div>
</div>
