@model TrainingPortal.Models.Portal
@{
    ViewBag.Title = "UserHome";
    Layout = "~/Views/Shared/_SignedInLayout.cshtml";
}



<div class="container" >
    <!--DASHBOARD-->
    <section class="dashboard wow zoomIn" data-wow-delay="0.1s" data-wow-duration="0.3s">
        <div class="welcome" >
            <h1 class="wow fadeIn" data-wow-delay="0.4s" data-wow-duration="0.6s" >Welcome To EOH Academy</h1>
            <p class="wow fadeIn" data-wow-delay="0.5s" data-wow-duration="0.6s">Lorem ipsum sir amet, his ad choro scaevola qualisque</p>
        </div>


        <!-- Search form -->
        <form class="form-inline md-form form-sm mt-9 wow fadeInLeft search-btn" data-wow-delay="0.7s"  data-wow-duration="0.7s" style="margin-left: 42.5%">
            <input class="form-control form-control-sm ml-3 w-55" type="text" placeholder="Search for courses" aria-label="Search">
            <i class="fas fa-search" aria-hidden="true"></i>
        </form>

        <div class="row">

            <!--Calendar Section-->
            <div id="calender-section"  class="wow bounceInDown" data-wow-delay="0.9s" data-wow-duration="0.9s" >
               
                <h2>Calendar</h2>

                <form id="form1">
                    <div>
                        @Html.TextBox("DatePicker", null, new { id = "txtStartDate", ClientIDMode = "Static" })
                    </div>
                </form>

            </div>

            <!--User Profile-->
            <div id="user-profile" class="wow bounceInDown" data-wow-delay="1s" data-wow-duration="0.9s">

                <h2>User Profile</h2>
                <ul>
                    <li>

                        <div class="wow fadeIn" data-wow-delay="1.7s">
                            Name: @Html.DisplayFor(model => model.StudentFirstName)
                        </div>
                    </li>
                    <li class="wow fadeIn" data-wow-delay="1.7s">
                        Last Name: @Html.DisplayFor(model => model.StudentLastName)
                    </li>
                    <li class="wow fadeIn" data-wow-delay="1.7s">
                        Email: @Html.DisplayFor(model => model.StudentEmail)
                    </li>

                </ul>
            </div>

        </div>
        <div class="wow fadeInUp" data-wow-delay="0.4s" data-wow-duration="0.3s" id="course-gallery" >
            @Html.Action("_CourseGallery", "Portal")
        </div>
        



    </section>
</div>


<!--Renders the Courses Page-->
<div id="courses" class="wow fadeInUp" data-wow-delay="0.4s" data-wow-duration="0.3s">
    @Html.Action("Courses")

</div>

<script src="~/Scripts/jquery.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery.parallax.js"></script>
<script src="~/Scripts/owl.carousel.min.js"></script>
<script src="~/Scripts/smoothscroll.js"></script>
<script src="~/Scripts/wow.min.js"></script>
<script src="~/Scripts/custom.js"></script>